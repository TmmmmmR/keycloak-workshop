						},
						{
							"key": "grant_type",
							"value": "client_credentials",
							"type": "text",
							"disabled": true
						}
					]
				},
				"url": "{{KC_URL}}/realms/{{Realm}}/protocol/openid-connect/token",
				"description": "Dont forget to change client-secret with yours"
			},
			"response": []
		},
