{
	"info": {
		"_postman_id": "5f4dc355-6e70-4f13-adb9-a52773001947",
		"name": "Lab 8",
		"schema": "https://schema.getpostman.com/json/collection/v2.0.0/collection.json"
	},
	"item": [
		{
			"name": "Get Token from KC",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var data = pm.response.json();\r",
							"pm.environment.set(\"Token\", data.access_token);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded"
					},
					{
						"key": "X-CSRF-TOKEN",
						"value": "1",
						"disabled": true
					},
					{
						"key": "Authorization",
						"value": "YXBwLWF1dGh6LXJlc3Qtc3ByaW5nYm9vdDpzZWNyZXQ=",
						"type": "text",
						"disabled": true
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "grant_type",
							"value": "password",
							"type": "text"
						},
						{
							"key": "username",
							"value": "alice",
							"type": "text"
						},
						{
							"key": "password",
							"value": "alice",
							"type": "text"
						},
						{
							"key": "client_id",
							"value": "app-authz-rest-springboot",
							"type": "text"
						},
						{
							"key": "client_secret",
							"value": "secret",
							"type": "text"
						},
						{
							"key": "grant_type",
							"value": "client_credentials",
							"type": "text",
							"disabled": true
						}
					]
				},
				"url": "{{KC_URL}}/auth/realms/{{Realm}}/protocol/openid-connect/token",
				"description": "Dont forget to change client-secret with yours"
			},
			"response": []
		},
		{
			"name": "Request /protected  path",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{Token}}"
					}
				],
				"url": "{{APP_URL}}/protected"
			},
			"response": []
		},
		{
			"name": "Request /protected/premium path",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{Token}}"
					}
				],
				"url": "{{APP_URL}}/protected/premium",
				"description": "Dont forget to set Bearer value obtains from token request"
			},
			"response": []
		},
		{
			"name": "Request/protected/{username} path",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{Token}}"
					}
				],
				"url": "{{APP_URL}}/protected/alice",
				"description": "Dont forget to set Bearer value obtains from token request"
			},
			"response": []
		}
	]
}